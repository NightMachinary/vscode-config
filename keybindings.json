// Place your key bindings in this file to overwrite the defaults
[
    {
        "key": "alt+x",
        "command": "workbench.action.showCommands"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.navigateLeft"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.navigateRight"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.navigateUp"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.navigateDown"
    },
    {
        "key": "cmd+;",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },
    {
        "key": "cmd+;",
        "command": "workbench.action.terminal.toggleTerminal",
        "when": "editorTextFocus"
    },
    {
        "key": "backspace",
        "command": "language-julia.plotpane-delete",
        "when": "jlplotpaneFocus"
    },
    {
        "key": "shift+backspace",
        "command": "language-julia.plotpane-delete-all",
        "when": "jlplotpaneFocus"
    },
    // buggy when doesn't work { "key": "q", "command": "workbench.action.closeActiveEditor", "when": "jlplotpaneFocus" },
    // { "before":["<leader>", "m", "e" ], "commands": ["language-julia.executeJuliaBlockInREPL"]}, 
    // { "before":[",", "l" ], "commands": ["language-julia.executeJuliaCodeInREPL"]}, 
    {
        "key": ", e",
        "command": "language-julia.executeJuliaBlockInREPL",
        "when": "editorTextFocus && editorLangId == 'julia' && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": ", l",
        "command": "language-julia.executeJuliaCodeInREPL",
        "when": "editorTextFocus && editorLangId == 'julia' && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": ", c",
        "command": "language-julia.executeJuliaCellInREPL",
        "when": "editorTextFocus && editorLangId == 'julia' && vim.active && vim.mode != 'Insert'"
    },
    {
        "key": ", h",
        "command": "editor.action.showHover",
        "when": "editorTextFocus && vim.active && vim.mode != 'Insert'"
    },
